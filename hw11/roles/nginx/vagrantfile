# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure(2) do |config|
  config.vm.box = "centos/7"
  config.vm.synced_folder ".", "/vagrant" , disabled: true
  config.vm.provider "virtualbox" do |v|
    v.memory = 256
    v.cpus = 1
  end

  config.vm.define "hw11" do |hw11|
    hw11.vm.network "private_network", ip: "192.168.100.100", virtualbox__intnet: "net1"
    hw11.vm.hostname = "hw11"
    hw11.vm.provision "shell", path: "ansible-playbook playbook/web.yml"
  end
end
